<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackground"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:onClick="clickPathTextPaint"
        android:text="path_text_paint"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:onClick="clickPolyLineView"
        android:text="poly_line_view"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:onClick="clickRadarView"
        android:text="radar_view"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:onClick="clickSecondOrderBesselView"
        android:text="second_order_bessel_view"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:onClick="clickThirdOrderBesselView"
        android:text="third_order_bessel_view"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:onClick="clickPathMeasureView"
        android:text="pathMeasure_view"
        android:textAllCaps="false" />

</LinearLayout>
